rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘¤ USER ROOT: Each user can read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ğŸ”§ Allow subcollections like preferences, billing, etc.
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ—‚ï¸ JOURNALS ROOT: User can manage their own journal root
    match /journals/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // âœï¸ JOURNAL ENTRIES: inside journals/{userId}/entries/{entryId}
      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ’¬ CHATS: User can manage their own chat sessions
    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸ’³ BILLING: User can view and manage their own billing metadata
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // âš™ï¸ ADMIN DOCUMENTS: Only admin users can read/write these
    match /admin/{docId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
